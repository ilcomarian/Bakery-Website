<%@arr.each do |i| %>
 <% i.each do |x| %>
 
 <div class="card" style="width: 18rem;" id = "<%=x.price%>">
          <img class="card-img-top "   src="<%=x.photo%>" width="30" height="200">
          <div class="card-body">
            <h5 class="card-title">
              <%=x.name%>
            </h5>
            <p class="card-text">
              <%=x.description%>
            </p>
            <a href="#" class="btn btn-primary">
              <%=x.price%>
            </a>
          </div>
      </div>
 
  <% end %>
  <% end %>
